# lexically sort filenames
--sort-files

# Add some extensions
--type-add=ruby=rake,haml
--type-add=vim=vimrc
--type-add=js=json
--type-add=ruby=Gemfile
--type-add=css=sass,less

# Add some new types
--type-set=cucumber=feature
--type-set=MARKDOWN=md,mkd,markdown
--type-set=RDOC=rdoc
--type-set=csv=csv

# Ignore any rsync cache from cached capistrano deploying
--ignore-dir=.rsync_cache
--ignore-dir=coverage
